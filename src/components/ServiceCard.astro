---
const { title, text, icon } = Astro.props;
---

<div class="w-[289px] h-[258px] p-6  overflow-hidden shadow-lg bg-white">
  <div class="flex items-center justify-center bg-primary-100 h-24 mb-4 rounded-md">
    <i class={`text-4xl ${icon} text-green-100`}></i>
  </div>
  <div class="text-center">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
      {text}
    </p>
  </div>
</div>
