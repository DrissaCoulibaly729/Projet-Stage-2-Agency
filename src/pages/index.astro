---
// src/pages/index.astro
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PortfolioCard from '../components/PortfolioCard.astro';
import ClientCard from '../components/ClientCard.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <link rel="stylesheet" href="/src/styles/global.css">
    <!-- Inclure FontAwesome via CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-wTjYsTXP+0RG1jNXk2Ka2ZJHa85P8Gz2uv4R3bP6Rj+6KZ9ES0AD8sJFj8r+Z7ONZgmrjokK5H3H6j/9pTh10g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body class="bg-red-500">
    <Header />
    <main class="p-4 text-center">
      <h1 class="text-4xl font-bold mb-4">Create Amazing Digital Products</h1>
      <p class="text-lg text-gray-700">We are a professional digital agency that has been established since 2016. We present a variety of digital services that can help you solve problems in your business.</p>
      <div class="flex justify-center">
        <Button />
      </div>
      <div class="max-w-lg mx-auto mt-8">
        <!-- Utilisation d'une icÃ´ne FontAwesome -->
        <i class="fas fa-image text-5xl text-gray-500"></i>
      </div>
      <div class="flex justify-center mt-8 space-x-4">
        <div class="text-gray-500">
          <p class="text-2xl font-bold">1.2K+</p>
          <p>Happy Clients</p>
        </div>
        <div class="text-gray-500">
          <p class="text-2xl font-bold">500+</p>
          <p>Successful Projects</p>
        </div>
        <div class="text-gray-500">
          <p class="text-2xl font-bold">500K+</p>
          <p>Lines of Code</p>
        </div>
        <div class="text-gray-500">
          <p class="text-2xl font-bold">99%</p>
          <p>Satisfaction Rate</p>
        </div>
      </div>
      
      <!-- Section "Our Services" -->
      <section class="mt-12 text-left">
        <h2 class="text-2xl font-bold mb-4">Our Services</h2>
        <h2 class="text-2xl font-bold mb-4">We Provide What You Need</h2>

        <div class="flex justify-center space-x-4">
          <ServiceCard />
          <ServiceCard />
          <ServiceCard />
        </div>
      </section>
      
      <!-- Section "We Provide What You Need" -->
      <section class="mt-12 text-left">
        <div class="flex justify-center space-x-4">
          <ServiceCard />
          <ServiceCard />
          <ServiceCard />
        </div>
      </section>
      
      <!-- Section "Portfolio" -->
      <section class="mt-12">
        <h2 class="text-2xl font-bold mb-4">Portfolio</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <PortfolioCard />
          <PortfolioCard />
          <PortfolioCard />
        </div>
      </section>

      <!-- Section "Client Reviews" -->
      <section class="mt-12">
        <h2 class="text-2xl font-bold mb-4">Client Reviews</h2>
        <div class="flex justify-center space-x-4">
          <ClientCard />
          <ClientCard />
          <ClientCard />
        </div>
      </section>
      
    </main>
    <Footer />
  </body>
</html>
