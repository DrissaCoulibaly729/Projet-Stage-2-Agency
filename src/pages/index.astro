---
// src/pages/index.astro
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PortfolioCard from '../components/PortfolioCard.astro';
import ClientCard from '../components/ClientCard.astro';
import Footer from '../components/Footer.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>
  <body class="bg-primary-500">
    <Header />
    <main class="text-center">
      <section class="bg-primary-500 text-white py-20 relative">
        <h1 class="text-4xl font-bold mb-4">Create Amazing Digital Products</h1>
        <p class="text-lg mb-8">We are a professional digital agency that has been established since 2016. We present a variety of digital services that can help you solve problems in your business.</p>
        <Button />
      </section>
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full bg-primary-500" style="clip-path: polygon(0 0, 100% 0, 100% 50%, 0 50%);"></div>
        <img src="/img/accueil.jpeg" alt="Image Description" class="w-full h-auto mx-auto rounded-lg shadow-md relative z-10"
          style="width: 1210px; height: 631px;">
      </div>
      <section class="bg-white py-20 mt-[-50%] pt-[50%]">
        <div class="flex justify-center space-x-12 text-gray-700">
          <div class="text-center">
            <p class="text-2xl font-bold">1.2K+</p>
            <p>Happy Clients</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold">500+</</p>
            <p>Successful Projects</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold">500K+</p>
            <p>Lines of Code</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold">99%</p>
            <p>Satisfaction Rate</p>
          </div>
        </div>
      </section>
      <section class="bg-gray-100 py-20">
        <h2 class="text-2xl font-bold mb-4">Our Services</h2>
        <p class="mb-8">We Provide What You Need</p>
        <div class="flex justify-center space-x-4">
          <ServiceCard />
          <ServiceCard />
          <ServiceCard />
        </div>
      </section>
      <section class="bg-gray-100 py-20">
        <h2 class="text-2xl font-bold mb-4">Portfolio</h2>
        <p class="mb-8">Recent Projects</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <PortfolioCard />
          <PortfolioCard />
          <PortfolioCard />
        </div>
      </section>
      <section class="bg-gray-100 py-20">
        <h2 class="text-2xl font-bold mb-4">Client Reviews</h2>
        <div class="flex justify-center space-x-4">
          <ClientCard />
          <ClientCard />
          <ClientCard />
        </div>
      </section>
      <section class="bg-primary-500 text-white py-20 text-center">
        <h2 class="text-2xl font-bold mb-4">Get Started with Us</h2>
        <p class="mb-8">Join our community and start growing your business with our expert services.</p>
        <Button />
      </section>
    </main>
    <Footer />
  </body>
</html>
